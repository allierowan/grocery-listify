<% if @message %>
  <div class="alert alert-danger">
    <%= @message %>
  </div>
<% end %>
<h1>Ingredients for <%= @recipe.name %></h1>
<ul>
  <% if @ingredients.length > 0 %>
    <% @ingredients.each do |ingredient| %>
      <li>
        <%= ingredient.quantity %>
        <%= ingredient.name %>
        <%= link_to "remove", recipe_ingredient_path(@recipe.id, ingredient.id), method: :delete %> |
        <%= link_to "edit", edit_ingredient_path(ingredient.id) %>
      </li>
    <% end %>
  <% else %>
    <p>
      No ingredients
    </p>
  <% end %>
  <% @ingredient.errors.full_messages.each do |message| %>
    <div class="alert alert-danger"><%= message %></div>
  <% end %>
</ul>
<div class="row">
  <div class="col-sm-3">
    <%= form_for([@recipe, @ingredient]) do |f| %>

    <div class="form-group">
      <%= f.label :name, class: "control-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :quantity, class: "control-label" %>
      <%= f.text_field :quantity, class: "form-control" %>
    </div>

    <%= f.submit "Add", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-sm-3">
  </div>
  <div class="col-sm-3">
  </div>
</div>


<%= link_to "Back to recipes", recipes_path %>
